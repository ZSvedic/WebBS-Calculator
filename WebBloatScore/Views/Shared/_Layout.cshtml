<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="shortcut icon" href="/Content/Images/favicon.ico"/>
    <title>Web Bloat Score Calculator</title>
    <meta name="description" content="Use WebBloatScore.com to calculate the Bloat Score of any website by comparing page size with optimized page screenshot size."/>
    <!-- ogicon.png source: https://icons8.com/web-app/974/scale -->
    <meta property="og:image" content="http://www.webbloatscore.com/Content/Images/ogicon.png" />
    <meta property="og:title" content="Web Bloat Score Calculator" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@ViewBag.OgUrl" />
    <meta property="og:description" content="@ViewBag.OgDescription" />
    @if(ViewBag.OgShare){<link href="http://www.webbloatscore.com/" rel="canonical" />}
    @Styles.Render("~/Content/Styles/css")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-85264403-1', 'auto');
        ga('send', 'pageview');
    </script>
</head>
<body>

<header class="header">
    <div class="center">
        <h1>Web Bloat Score Calculator</h1>
        <p>Compare size of a page to a compressed image of the same page</p>
    </div>
    <a class="fork-link" target="_blank" href="https://github.com/ZSvedic/WebBS-Calculator"><img src="/Content/Images/forkme.png" alt="Fork us on GitHub"/></a>
</header>

<main>
@RenderBody()
</main>

<footer class="footer">
    <div class="center">
        <small>© <a href="https://www.testdome.com/" target="_blank">TestDome</a></small>
    </div>
</footer>

@Scripts.Render("~/Content/Scripts/js")
</body>
</html>