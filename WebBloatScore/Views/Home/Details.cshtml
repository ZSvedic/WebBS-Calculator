@model WebBloatScore.Models.DetailsResultCollection
@{Layout = null;}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="shortcut icon" href="/Content/Images/favicon.ico"/>
    <title>Web Bloat Score Calculator | Details</title>
    <meta name="robots" content="noindex, nofollow">
    @Styles.Render("~/Content/Styles/css")
</head>
<body>
<div class="main-content center">
    <table id="scores-table" class="full">
        <colgroup>
            <col style="width:50%;"/>
            <col style="width:25%;"/>
            <col style="width:25%;"/>
        </colgroup>
        <thead>
            <tr>
                <th>REQUEST</th>
                <th>SIZE (B)</th>
                <th>CONTENT TYPE</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var details in Model)
        {
            <tr>
                <td>@details.Url</td>
                <td>@details.Size</td>
                <td>@details.Type</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
